/* pages/createTeamGuide/createTeamGuide.wxss */
page{
  padding: 20rpx 50rpx;
  box-sizing: border-box;
}
.patch{
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 30rpx;
}
.van-button{
  
  width: 650rpx !important;
  height: 120rpx !important;
  font-size: 40rpx !important;
}
.button-container{
  
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 30rpx;
  width: 100%;
  background-color: #fff;
}

.guide-login-text{
  font-size: 26rpx;
  color: #5a5859;
  margin-bottom: 7rpx;
}
.team-info-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}
.avator{
  width:150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 15rpx;
}
.team-text-info-container{
  margin-left: 20rpx;
  height: 160rpx;
}
.avator-name{
  font-size: 46rpx;
}
.slogan-text{
  color: #BAB6B8;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}