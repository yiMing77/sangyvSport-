/* pages/memberlist/memberlist.wxss */

.button-container{
  height: 150rpx;
  position: fixed;
  bottom: 60rpx;
  background-color: #F2F2F2;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.van-button{
  width: 700rpx !important;
  height: 120rpx !important;
  font-size: 40rpx !important;
}
.semi-circle-background{
  position: fixed;
  z-index: 20;
  width: 100%;
  height:270rpx;
  background-color: #F6CB79;
  border-radius: 0rpx 0rpx 150rpx 150rpx;
}
.third-text{
  color: #BAB6B8;
  font-size: 26rpx;
}
.team-info-card-container{
  z-index: 999;
  position:fixed;
  width: 650rpx;
  height: 360rpx;
  background-color: #fff;
  top:60rpx;
  box-shadow:0px 7px 12px #c9c7c7;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.team-info-container{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.team-avator{
  margin-top: 20rpx;
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 7rpx;
}
.teamlist{
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position:absolute;
  width: 650rpx;
  
  background-color: #fff;
  top:500rpx;
  border-radius: 20rpx;
}
.team-info-text-container{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  
}
.team-nickname{
  font-size: 40rpx;
  font-weight: bold;
}
.slogan{
  margin-top: 10rpx;
  font-size: 26rpx;
}
.number{
  font-size: 70rpx;
  font-weight: bolder;
  color: #F6CB79;
}
.team-title{
  font-size: 40rpx;
  font-weight: bold;

}
.patch{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  background-color: #F2F2F2;
  z-index: 100;
}
.scroll-container{

  margin-top: 20rpx;
}
.user-name{
  font-size: 40rpx;
  margin-left: 20rpx;
  
}
.line{
  width: 100%;
  height: 1rpx;
  margin-top: 20rpx;
  background-color: #d4d3d3;
  margin-bottom: 30rpx;
}
.user-avator{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 100%;
}
.user-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}
.commander{
  background-color: #F6CB79;
  color:#fff;
  font-weight: 900 !important;
  width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  margin-left: 20rpx;
}